public class Main {
	public static void main(String[] args) {
		int[] arr = {2, 3, 4, 6, 7, 9, 10};
		int even = 0, odd = 0;
		
		for(int i = 0; i < arr.length; i++){
		    if(arr[i]%2 == 0){
		       even++;
		    }else {
		        odd++;
		    }
		}
		System.out.println("Index of even: " + even);
		System.out.println("Index of odd: " + odd);
	}
}